<view class="button-area">
  <button disabled="{{!canAdd}}" type="primary" plain="true" bindtap="add" hover-class>加</button>
  <button disabled="{{!canRemove}}" type="primary" plain="true" bindtap="delete" hover-class>减</button>
</view>
<view>
  <block wx:for="{{arr}}">
    <view>
      <text>{{index + 1}} '{{item}}'</text>
    </view>
  </block>
</view>
<view>
  <text>{{text}}</text>
</view>

