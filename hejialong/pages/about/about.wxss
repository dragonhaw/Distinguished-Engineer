/* pages/about/about.wxss */

.movie-list {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 41px;
}

.item {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  margin: 10rpx;
  height: 240rpx;
  align-items: center;
  justify-content: center;
  border: 1px solid rgb(241, 241, 241);
}

.item-left {
  flex: 0;
}

image {
  display: block;
  width: 120rpx;
  height: 180rpx;
}

.item-middle {
  flex: 4;
  margin-left: 20rpx;
  height: 180rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 180rpx;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 36rpx;
  color: black;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-overflow: ellipsis;
}

.actor {
  font-size: 28rpx;
  color: #666;
  margin-top: 50rpx;
}

.score {
  color: red;
  font-size: 28rpx;
}

.action {
  border: 2rpx solid #29cc6d;
  color: #29cc6d;
  padding: 4rpx 8rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.footer-fixed {
  display: flex;
  width: 100%;
  flex-direction: row;
  position: fixed;
  z-index: 1;
  bottom: 0;
  left: 0;
  padding: 10px 0 10px 0;
  background-color: #fff;
  border-top: 1px solid rgb(200, 200, 200);
}

.car {
  flex: 1;
  line-height: 40rpx;
  margin-left: 10px;
}

.message {
  line-height: 40rpx;
}

.message-text {
  padding-right: 40rpx;
}

.message-bubble {
  background-color: red;
  text-align: center;
  position: absolute;
  top: -7px;
  right: 3px;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  font-size: 12px;
  color: white;
  border: 1px solid white;
}
